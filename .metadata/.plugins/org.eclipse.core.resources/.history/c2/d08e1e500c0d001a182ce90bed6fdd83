struct R_G_B
{
        int _red;//set_color_RED
        int _green;//set_color_GREEN
        int _blue;//set_color_BLUE
}R_G_B;

int *set_color(struct R_G_B *rgb)
{
	rgb->_red = 100;
	rgb->_green = 0;
	rgb->_blue =0;
    int *arr_color[4];
        switch(0)
        {
        case red:
        {

        	*arr_color[0] = rgb->_red;
        	*arr_color[1] =0;
        	*arr_color[2] =0;

                return (*arr_color);
                break;
        }
        case green:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        case blue:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        case yellow:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        case magenta:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        case cyan:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        case orange:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        case violet:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        default:
        {

        	*arr_color[0] = rgb->_red;
        	        	*arr_color[1] =0;
        	        	*arr_color[2] =0;

        	                return (*arr_color);
        	                break;
        }
        }
}
